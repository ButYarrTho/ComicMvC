@model IEnumerable<ComicMvC.Models.Comic>

@{
    ViewData["Title"] = "Shopping";
}

<h2 class="mb-4">Shopping</h2>

<div class="row">
    @foreach (var comic in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@comic.CoverImageUrl"
                     class="card-img-top"
                     alt="@comic.Title"
                     style="object-fit:cover; height:250px;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@comic.Title</h5>
                    <p class="card-text text-truncate">@comic.Synopsis</p>
                    <div class="mt-auto">
                        <button class="btn btn-primary w-100">Buy</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
