@model IEnumerable<ComicMvC.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="link-body-emphasis">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.GenreName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreId" class="link-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GenreId" class="link-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreId" class="link-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
