@model IEnumerable<ComicMvC.Models.Creator>

@{
    ViewData["Title"] = "Comic Creators";
}

<div class="text-center my-5">
    <h1 class="display-3 text-primary fw-bold" style="font-family: 'Bangers', cursive; text-shadow: 4px 4px 2px rgba(0, 0, 0, 0.5);">
        The Minds Behind the Magic!
    </h1>
    <p class="lead text-dark">Meet the legendary artists and writers who brought comics to life.</p>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg comic-btn">
            + Add a New Creator
        </a>
    </div>
}

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card comic-card border border-dark shadow-lg">
                    <div class="card-header bg-danger text-white fw-bold text-center" style="font-family: 'Bangers', cursive;">
                        @item.FullName
                    </div>
                    <div class="card-body bg-light text-dark">
                        <h5 class="card-title text-center text-warning">Role: @item.Role</h5>
                        <p class="text-muted">Known for crafting iconic stories and characters.</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@item.CreatorId" class="btn btn-warning comic-btn">Details</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Edit" asp-route-id="@item.CreatorId" class="btn btn-primary comic-btn">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.CreatorId" class="btn btn-danger comic-btn">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">

<style>
    .comic-card {
        border-width: 3px;
        padding: 15px;
        transition: transform 0.2s ease-in-out;
        background-color: #fffded;
    }

        .comic-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.4);
        }

    .comic-btn {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: 'Bangers', cursive;
        border: 3px solid black;
        transition: all 0.2s ease-in-out;
    }

        .comic-btn:hover {
            transform: scale(1.1);
            box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);
        }
</style>
