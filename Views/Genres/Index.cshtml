@model IEnumerable<ComicMvC.Models.Genre>

@{
    ViewData["Title"] = "Comic Genres";
}

<div class="text-center my-5">
    <h1 class="display-3 text-warning fw-bold" style="font-family: 'Bangers', cursive; text-shadow: 4px 4px 2px rgba(0, 0, 0, 0.5);">
        Comic Book Genres!
    </h1>
    <p class="lead text-dark">Discover the different genres that shape the world of comics.</p>
</div>

<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg comic-btn">
        + Add a New Genre
    </a>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card comic-card border border-dark shadow-lg">
                    <div class="card-header bg-primary text-white fw-bold text-center" style="font-family: 'Bangers', cursive;">
                        @item.GenreName
                    </div>
                    <div class="card-body bg-light text-dark text-center">
                        <p class="text-muted">Dive into this genre's unique storytelling style!</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Edit" asp-route-id="@item.GenreId" class="btn btn-primary comic-btn">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.GenreId" class="btn btn-warning comic-btn">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.GenreId" class="btn btn-danger comic-btn">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">

<style>
    .comic-card {
        border-width: 3px;
        padding: 15px;
        transition: transform 0.2s ease-in-out;
        background-color: #fffded;
    }

        .comic-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.4);
        }

    .comic-btn {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: 'Bangers', cursive;
        border: 3px solid black;
        transition: all 0.2s ease-in-out;
    }

        .comic-btn:hover {
            transform: scale(1.1);
            box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);
        }
</style>
