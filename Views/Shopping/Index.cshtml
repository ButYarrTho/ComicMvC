@model IEnumerable<ComicMvC.Models.Comic>

<div class="row">
    @foreach (var comic in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@comic.CoverImageUrl" class="card-img-top" style="object-fit:cover; height:250px;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@comic.Title</h5>
                    <p class="card-text text-truncate">@comic.Synopsis</p>

                    <div class="mt-auto">
                        <form asp-controller="Cart" asp-action="Add" method="post">
                            <input type="hidden" name="id" value="@comic.ComicId" />
                            <button type="submit" class="btn btn-primary w-100">Buy</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
