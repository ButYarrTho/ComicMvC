@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to ComicMvC</h2>

@if (!User.Identity.IsAuthenticated)
{
    <p>Please log in to access the full functionality of the site.</p>
    <a href="/Account/Login" class="btn btn-primary">Login with Google</a>
}
else
{
    <p>Welcome, @User.Identity.Name!</p>
    <a href="/Account/Logout" class="btn btn-secondary">Logout</a>
}
