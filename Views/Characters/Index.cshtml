@model IEnumerable<ComicMvC.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p><a asp-action="Create" class="link-body-emphasis">Create New</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Alias</th>
            <th>Description</th>
            <th>First Appearance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Alias)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstAppearanceComic.Title)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CharacterId" class="link-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CharacterId" class="link-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CharacterId" class="link-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
